<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity.update_accountActivity">

    <include
        android:id="@+id/fullView_l"
        layout="@layout/lower_backgound_with_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 />

      <ImageView
        android:id="@+id/opacityFullView_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a8ffffff"
        />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


           <ImageView
               android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>
            <LinearLayout
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="0dp"
                android:background="#c3ffffff"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/playerImage_iv"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="36dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/circle_border"
                    android:padding="4dp"
                    android:src="@drawable/ic_person_24dp"

                    />


                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/playerImage_iv"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:paddingTop="-1dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_UserName"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/userName"
                            android:layout_margin="15dp"
                            android:hint="User Name"
                            android:inputType=""
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_countryCode"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/countryCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/email"
                            android:layout_margin="15dp"
                            android:hint="Country Code"
                            android:inputType=""
                            android:textSize="16sp"
                            android:text="Open Country Picker"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/userName"
                            android:layout_margin="15dp"
                            android:hint="Email"
                            android:inputType=""
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_Bdate"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/userName"
                            android:layout_margin="15dp"
                            android:hint="Date of Birth"
                            android:inputType=""
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="update"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/opacityFullView_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />



</android.support.constraint.ConstraintLayout>


